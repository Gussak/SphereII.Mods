<XNPCCoreUI file="XUi/controls.xml">

<!--	// XNPCCoreUI // Conversation Player Window -->

		<append xpath="/controls">
			<xnpccoreui_response_entry>
				<rect	width="340"
						height="36"
						style="press, hover, scroll"
						controller="DialogResponseEntry"
						enabled_color="${enabled_color}"
						disabled_color="${disabled_color}"
						row_color="${row_color}"
						hover_color="${hover_color}"
						sound="[recipe_click]"
						visible="{showresponse}">
					<sprite name="Icon" depth="5" pos="20,-20" size="20,20" sprite="xnpccoreui_game_symbol_talk" pivot="center" color="{rowstatecolor}" globalopacitymod="1.8" />
					<label name="Text" depth="4" pos="200,-20" width="300" height="36" style="xnpccoreui_label_normal" text="{response}{poi.name}" font_size="22" pivot="center" color="{rowstatecolor}" overflow="ShrinkContent" />
				</rect>
			</xnpccoreui_response_entry>
		</append>


<!--	// SMX // Window Design - Main Window -->

		<append xpath="/controls">
			<xnpccoreui_window_design>
				<rect name="xnpccoreui_window_design" depth="${depth}">
