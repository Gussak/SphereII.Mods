					<sprite name="xnpccoreui_window_background" depth="1" width="${width}" height="${height}" sprite="xnpccoreui_window_background" type="sliced" color="[xnpccoreui_element_background]" globalopacitymod="1.6" />
					<sprite name="xnpccoreui_window_foreground" depth="2" pos="10,-70" width="${width-20}" height="${height-80}" sprite="xnpccoreui_window_background" type="sliced" color="[xnpccoreui_element_backdrop_1]" globalopacitymod="1.8" />
					<sprite name="xnpccoreui_window_header_background" depth="3" pos="-18,-4" width="${16+width}" height="60" sprite="xnpccoreui_header_background" color="[black]" globalopacitymod="1.9" />
					<sprite name="xnpccoreui_window_header_background" depth="4" pos="-18,-4" width="${16+width}" height="60" sprite="xnpccoreui_header_background" color="[white]" globalopacitymod="1.9" />
					<sprite name="xnpccoreui_window_header_foreground" depth="5" pos="5,-4" width="${width-7}" height="62" sprite="xnpccoreui_header_foreground" type="sliced" color="[xnpccoreui_element_accentcolor_1]" globalopacitymod="0.8" />
					<!--sprite name="smxlib_window_header_separation" depth="4" pos="20,-61" width="${width-40}" height="5" sprite="smxlib_window_separation_line_1" flip="vertically" color="[smxlib_window_sep_line]" globalopacitymod="1.2" /-->
					<label name="${name}" depth="6" pos="${Round(width/2,0)},-36" width="${width-40}" height="36" style="xnpccoreui_window_title" text="${text}" text_key="${text_key}" overflow="ShrinkContent" />

					<!--sprite name="xnpccoreui_window_isdev" depth="8" pos="${width-40},-35" width="28" height="28" sprite="menu_empty" type="sliced" pivot="center" color="[white]" globalopacitymod="1.8" visible="true" />
