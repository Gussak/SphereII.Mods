<configs>

  <append xpath="/Sounds">
    <SoundDataNode name="samaraMorgan_NeverSleeps">
      <AudioSource name="Sounds/AudioSource_Player"/>
      <Noise ID="2" range="7" volume="15" time="3" muffled_when_crouched="0.5" />
      <AudioClip ClipName="#@modfolder:Resources/SamaraMorgan.unity3d?neversleeps.mp3" Loop="false" />
      <LocalCrouchVolumeScale value="0.5" />
      <CrouchNoiseScale value="1" />
      <NoiseScale value="1" />
      <MaxVoices value="10" />
      <MaxRepeatRate value="0.001" />
    </SoundDataNode>

    <SoundDataNode name="samaraMorgan_Stop">
      <AudioSource name="Sounds/AudioSource_Player"/>      
      <Noise ID="2" range="7" volume="15" time="3" muffled_when_crouched="0.5" />
      <AudioClip ClipName="#@modfolder:Resources/SamaraMorgan.unity3d?stop.mp3"  Loop="false" />
      <LocalCrouchVolumeScale value="0.5" />
      <CrouchNoiseScale value="1" />
      <NoiseScale value="1" />
      <MaxVoices value="10" />
      <MaxRepeatRate value="0.001" />
      
    </SoundDataNode>

    <SoundDataNode name="samaraMorgan_WhatdoYouWant">
      <AudioSource name="Sounds/AudioSource_Player"/>      
      <Noise ID="2" range="7" volume="15" time="3" muffled_when_crouched="0.5" />
      <AudioClip ClipName="#@modfolder:Resources/SamaraMorgan.unity3d?whatdouwant.mp3" Loop="false" />
      <LocalCrouchVolumeScale value="0.5" />
      <CrouchNoiseScale value="1" />
      <NoiseScale value="1" />
      <MaxVoices value="10" />
      <MaxRepeatRate value="0.001" />
    </SoundDataNode>

    <SoundDataNode name="samaraMorgan_phonecall">
      <AudioSource name="Sounds/AudioSource_Player"/>
      <Noise ID="2" range="7" volume="15" time="3" muffled_when_crouched="0.5" />
      <AudioClip ClipName="#@modfolder:Resources/SamaraMorgan.unity3d?PhoneCalls.mp4" Loop="false" />
      <LocalCrouchVolumeScale value="0.5" />
      <CrouchNoiseScale value="1" />
      <NoiseScale value="1" />
      <MaxVoices value="10" />
      <MaxRepeatRate value="0.001" />
      <Buff value="buffcurseSamaraMorgan_Start" /> <!-- distribute this buff in the radius of the sound -->
      <Quest value="quest_curseSamaraMorgan" /> <!-- distribute this quest to all in the radius of the sound-->
    </SoundDataNode>
     </append>


</configs>
