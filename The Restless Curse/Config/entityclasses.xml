<configs>
  <append xpath="/entity_classes">
    <entity_class name="SamaraMorgan" extends="zombieLab">
      <property name="Tags" value="entity,zombie,walker,feral"/>
      <property name="Mesh" value="Zombies/zombieStandardLabRagdoll"/>
      <property name="ReplaceMaterial1" value="entities/zombies/materials/feral_eye"/>
      <property name="DismemberMultiplierHead" value=".7"/>
      <property name="DismemberMultiplierArms" value=".7"/>
      <property name="DismemberMultiplierLegs" value=".7"/>
      <!-- Feral -->
      <property name="PainResistPerHit" value=".25"/>
      <!-- Feral -->
      <property name="HandItem" value="meleeHandZombieFeral"/>
      <property name="MoveSpeedAggro" value=".5, 1.35"/>
      <property name="ExperienceGain" value="750"/>
      <!-- XP grunt feral -->
      <property name="LootDropProb" value=".03"/>
      <!-- Feral -->
      <effect_group name="Base Effects">
        <passive_effect name="HealthMax" operation="base_set" value="237"/>
        <passive_effect name="HealthMax" operation="perc_set" value="1"/>
        <!-- Zombie HP scale -->
      </effect_group>
      <property name="AITask-1" value="ApproachAndFollowTargetSDX, Mods" data="incentives=Cursed"/>
      <property name="AITask-2" value="" />
    </entity_class>
  </append>

</configs>
